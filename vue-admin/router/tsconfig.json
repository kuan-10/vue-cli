{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths":{
      "@/*":["./src/*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","vite.config.ts", "vite/util.ts","vite/**/*.ts","mock/*.ts","types/**/*.d.ts","types/**/*.ts","src/**/**/*.vue"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
